<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_error_outline_24"
        android:layout_centerHorizontal="true"
        android:id="@+id/error_pic"
        />
    <TextView
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error"
        android:textAlignment="center"
        android:layout_below="@+id/error_pic"
        android:id="@+id/error_header"
        android:textColor="@color/Black"
        />
    <TextView
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error bluetooth Esta"
        android:textAlignment="center"
        android:layout_below="@+id/error_header"
        android:id="@+id/error_message"
        android:textColor="@color/overlay_dark_50"
        />
    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:background="@drawable/button_backgrond"
        android:layout_below="@+id/error_message"
        android:id="@+id/btn_error"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        />



</RelativeLayout>