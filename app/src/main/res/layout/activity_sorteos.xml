<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SorteosActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <EditText
        android:layout_below="@id/toolbar"
        android:clickable="true"
        android:editable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datepickersorteos"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:hint="10/1/2020"
        />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_toRightOf="@+id/datepickersorteos"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toolbar"
        />
    <LinearLayout
        android:paddingLeft="15dp"
        android:background="@color/overlay_dark_60"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/datepickersorteos"
        android:weightSum="4"
        >
        <TextView
            android:textColor="@color/White"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loteria"
            />
        <TextView
            android:textColor="@color/White"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Primera"
            />
        <TextView
            android:textColor="@color/White"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Segunda"
            />
        <TextView
            android:textColor="@color/White"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tercera"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_search_black_24dp"
        android:id="@+id/searchreghs"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/searchreghs"
        android:text="No Se encontraron resutados"
        />



</RelativeLayout>